<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Offline9GagDownloader.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label x:Name="StatisticsLabel" Grid.Row="0"></Label>

        <WebView x:Name="gagView"  Grid.Row="1" Source="https://www.9gag.com/" />
        <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center">
            <Button
                x:Name="CounterBtn"
                Text="Download"
                SemanticProperties.Hint="Downloads the content for later use"
                Clicked="OnDownloadClick"
                 />

            <Button 
                Text="Browse"
                SemanticProperties.Hint="Go to browsing stored memes"
                Clicked="OnBrowseClick"
                />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
